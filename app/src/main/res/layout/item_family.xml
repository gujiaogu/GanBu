<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="@dimen/vertical_spacing"
    android:paddingBottom="@dimen/vertical_spacing"
    android:gravity="center_vertical">
    <TextView
        style="@style/cadre_member_text"
        android:id="@+id/item_family_relationship"/>
    <TextView
        style="@style/cadre_member_text"
        android:id="@+id/item_family_name"/>
    <TextView
        style="@style/cadre_member_text"
        android:id="@+id/item_family_birthday"
        android:layout_weight="2"/>
    <TextView
        style="@style/cadre_member_text"
        android:id="@+id/item_family_political"/>
    <TextView
        style="@style/cadre_member_text"
        android:id="@+id/item_family_work_unit"
        android:layout_weight="3"
        android:gravity="left"/>
</LinearLayout>