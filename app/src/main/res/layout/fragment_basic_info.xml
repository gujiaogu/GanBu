<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.BasicInfoFragment">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                style="@style/cadre_info_layout">
                <TextView
                    style="@style/cadre_info_text_title"
                    android:text="姓名"/>
                <TextView
                    style="@style/cadre_info_text_content"
                    android:id="@+id/info_name"/>
            </LinearLayout>
            <LinearLayout
                style="@style/cadre_info_layout">
                <TextView
                    style="@style/cadre_info_text_title"
                    android:text="性别"/>
                <TextView
                    style="@style/cadre_info_text_content"
                    android:id="@+id/info_gender"/>
            </LinearLayout>
            <LinearLayout
                style="@style/cadre_info_layout">
                <TextView
                    style="@style/cadre_info_text_title"
                    android:text="出生日期"/>
                <TextView
                    style="@style/cadre_info_text_content"
                    android:id="@+id/info_birthday"/>
            </LinearLayout>
            <LinearLayout
                style="@style/cadre_info_layout">
                <TextView
                    style="@style/cadre_info_text_title"
                    android:text="婚姻状况"/>
                <TextView
                    style="@style/cadre_info_text_content"
                    android:id="@+id/info_marriage"/>
            </LinearLayout>
            <LinearLayout
                style="@style/cadre_info_layout">
                <TextView
                    style="@style/cadre_info_text_title"
                    android:text="政治面貌"/>
                <TextView
                    style="@style/cadre_info_text_content"
                    android:id="@+id/info_political"/>
            </LinearLayout>
            <LinearLayout
                style="@style/cadre_info_layout">
                <TextView
                    style="@style/cadre_info_text_title"
                    android:text="民族"/>
                <TextView
                    style="@style/cadre_info_text_content"
                    android:id="@+id/info_nation"/>
            </LinearLayout>
            <LinearLayout
                style="@style/cadre_info_layout">
                <TextView
                    style="@style/cadre_info_text_title"
                    android:text="籍贯"/>
                <TextView
                    style="@style/cadre_info_text_content"
                    android:id="@+id/info_ji_guan"/>
            </LinearLayout>
            <LinearLayout
                style="@style/cadre_info_layout">
                <TextView
                    style="@style/cadre_info_text_title"
                    android:text="出生地"/>
                <TextView
                    style="@style/cadre_info_text_content"
                    android:id="@+id/info_birth_place"/>
            </LinearLayout>
            <LinearLayout
                style="@style/cadre_info_layout">
                <TextView
                    style="@style/cadre_info_text_title"
                    android:text="入党时间"/>
                <TextView
                    style="@style/cadre_info_text_content"
                    android:id="@+id/info_join_time"/>
            </LinearLayout>
            <LinearLayout
                style="@style/cadre_info_layout">
                <TextView
                    style="@style/cadre_info_text_title"
                    android:text="参加工作时间"/>
                <TextView
                    style="@style/cadre_info_text_content"
                    android:id="@+id/info_work_time"/>
            </LinearLayout>
            <LinearLayout
                style="@style/cadre_info_layout">
                <TextView
                    style="@style/cadre_info_text_title"
                    android:text="现任职务"/>
                <TextView
                    style="@style/cadre_info_text_content"
                    android:id="@+id/info_current_position"/>
            </LinearLayout>
            <LinearLayout
                style="@style/cadre_info_layout">
                <TextView
                    style="@style/cadre_info_text_title"
                    android:text="任现职时间"/>
                <TextView
                    style="@style/cadre_info_text_content"
                    android:id="@+id/info_current_position_time"/>
            </LinearLayout>
            <LinearLayout
                style="@style/cadre_info_layout">
                <TextView
                    style="@style/cadre_info_text_title"
                    android:text="任现级时间"/>
                <TextView
                    style="@style/cadre_info_text_content"
                    android:id="@+id/info_current_level_time"/>
            </LinearLayout>
            <LinearLayout
                style="@style/cadre_info_layout"
                android:visibility="gone">
                <TextView
                    style="@style/cadre_info_text_title"
                    android:text="健康状况"/>
                <TextView
                    style="@style/cadre_info_text_content"
                    android:id="@+id/info_health_status"/>
            </LinearLayout>
            <LinearLayout
                style="@style/cadre_info_layout"
                android:visibility="gone">
                <TextView
                    style="@style/cadre_info_text_title"
                    android:text="专业技术职务"/>
                <TextView
                    style="@style/cadre_info_text_content"
                    android:id="@+id/info_tech_position"/>
            </LinearLayout>
            <LinearLayout
                style="@style/cadre_info_layout"
                android:visibility="gone">
                <TextView
                    style="@style/cadre_info_text_title"
                    android:text="熟悉专业有何专长"/>
                <TextView
                    style="@style/cadre_info_text_content"
                    android:id="@+id/info_tech_speciality"/>
            </LinearLayout>
            <LinearLayout
                style="@style/cadre_info_layout">
                <TextView
                    style="@style/cadre_info_text_title"
                    android:text="全日制教育"/>
                <TextView
                    style="@style/cadre_info_text_content"
                    android:id="@+id/info_full_time_degree"/>
            </LinearLayout>
            <LinearLayout
                style="@style/cadre_info_layout">
                <TextView
                    style="@style/cadre_info_text_title"
                    android:text="毕业院校及专业"/>
                <TextView
                    style="@style/cadre_info_text_content"
                    android:id="@+id/info_full_time_college"/>
            </LinearLayout>
            <LinearLayout
                style="@style/cadre_info_layout">
                <TextView
                    style="@style/cadre_info_text_title"
                    android:text="在职教育"/>
                <TextView
                    style="@style/cadre_info_text_content"
                    android:id="@+id/info_party_time_degree"/>
            </LinearLayout>
            <LinearLayout
                style="@style/cadre_info_layout">
                <TextView
                    style="@style/cadre_info_text_title"
                    android:text="毕业院校及专业"/>
                <TextView
                    style="@style/cadre_info_text_content"
                    android:id="@+id/info_party_time_college"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>