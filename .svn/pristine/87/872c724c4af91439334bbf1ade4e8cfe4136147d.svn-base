<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/vertical_spacing"
    android:paddingTop="@dimen/vertical_spacing"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:layout_gravity="center_vertical"
    android:background="@drawable/list_item_selector">
    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/item_search_name"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@color/color_tab_text"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textSize="16sp"
        android:textColor="@color/color_tab_text"
        android:id="@+id/item_search_position"
        android:layout_marginLeft="@dimen/vertical_spacing"/>
</LinearLayout>